@model BasicDotnet.WebMvc.Models.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<p>API URL: @Model.LoginApiEndpoint</p>

<form id="loginForm">
    <div class="form-group">
        <label asp-for="LoginDto.Username"></label>
        <input asp-for="LoginDto.Username" class="form-control" id="LoginDto_UserName" />
        <span asp-validation-for="LoginDto.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginDto.Password"></label>
        <input asp-for="LoginDto.Password" type="password" class="form-control" id="LoginDto_Password" />
        <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
    </div>

    <button type="submit" id="loginButton" class="btn btn-primary mt-3">Login</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("loginForm").addEventListener("submit", async function (event) {
                event.preventDefault(); // Prevent normal form submission

                if (!$(this).valid()) { // Ensure validation is successful before submitting
                    return;
                }

                // Get form data
                const formData = new FormData(this);
                const userData = {
                    Username: formData.get("LoginDto.Username"),
                    Password: formData.get("LoginDto.Password")
                };

                try {
                    const response = await apiClient.post("@Model.LoginApiEndpoint", userData);

                    const accessToken = response.data.accessToken;
                    if (!accessToken) {
                        throw new Error("AccessToken not received from API.");
                    }

                    await apiClient.post("@Url.Action("set-auth-cookie", "Auth")", response.data);

                    alert("Login successful!");

                    window.location.href = "@Url.Action("me", "Auth")";
                } catch (error) {
                    alert("Login failed: " + error.message);
                }
            });
        });
    </script>
}
